<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransPedidosentregarFragment">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/fondo">

    </ImageView>

    <TextView
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:text="Pedidos A Entregar"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:textSize="40dp"
        android:textStyle="bold"
        android:background="@color/black"
        android:textColor="@color/white"
        android:alpha="0.7"
        />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="500dp"
        android:layout_marginTop="130dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/bordeverde">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/manzanas">

        </ImageView>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="  MANZANAS"
            android:layout_marginLeft="50dp"
            android:textColor="@color/black"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="CRA 1#17-08        MADRID     CUNDINAMARCA"
            android:textAlignment="center"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="-230dp"
            android:textColor="@color/black"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="$7.500"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="-100dp"
            android:textColor="@color/green"
            android:textStyle="bold">
        </TextView>

        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="-280dp"
            android:text="ENTREGADO"
            android:textColor="@color/red"
            android:background="@color/transparente">

        </Button>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="165dp"
            android:layout_marginLeft="-70dp"
            android:src="@drawable/cerrar_rojo">

        </ImageView>

    </LinearLayout>
    <View
        android:layout_width="290dp"
        android:layout_height="2dp"
        android:background="@color/green"
        android:layout_marginTop="-30dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"/>

</FrameLayout>