<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/fndo"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="50dp">

            <LinearLayout
                android:background="@drawable/shape_items_borde"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_entrega"
                        android:layout_width="160dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/manzanas">
                    </ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/producto_entrega"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="manzana"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/direccion_entrega"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CRA 1#17-08 "
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/ciudad_entrega"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="MADRID"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/departamento_entrega"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CUNDINAMARCA"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/total_entrega"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$ 7.000"
                            android:textAlignment="center"
                            android:textColor="@color/green"
                            android:textStyle="bold"></TextView>

                    </LinearLayout>
                </LinearLayout>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/estado_entrega"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="ESTADO"
                        android:layout_marginTop="10dp"
                        android:textAlignment="textEnd"
                        android:textColor="@color/red"
                        android:textStyle="bold"></TextView>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cancelarnegro"></ImageButton>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>