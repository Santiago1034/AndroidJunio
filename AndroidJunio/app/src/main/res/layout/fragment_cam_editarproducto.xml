<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CamEditarproductoFragment">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondo_fin"
        android:scaleY="1.1">
    </ImageView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:backgroundTint="@color/blanco_gris"
                    android:layout_width="300dp"
                    android:layout_height="370dp"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="50dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >





                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="EDITAR PRODUCTO"
                            android:textStyle="bold"
                            android:textColor="@color/green"
                            android:textAlignment="center"
                            android:layout_marginTop="15dp"
                            android:textSize="20dp">

                        </TextView>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Seleccione la categoria"
                            android:textColor="@color/green"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp">

                        </TextView>


                        <Spinner
                            android:id="@+id/SpinnerCategoriaProductosEditar"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp">

                        </Spinner
                            >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="URL DE LA IMAGEN"
                            android:textColor="@color/green"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp">

                        </TextView>



                            <EditText
                                android:id="@+id/UrlImg"
                                android:layout_width="180dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="60dp"
                                android:textAlignment="center"
                                android:src="@drawable/manzanas">
                            </EditText>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="ID DEL PRODUCTO"
                            android:textColor="@color/green"
                            android:layout_gravity="center">

                        </TextView>

                            <EditText
                                android:id="@+id/IdProduc"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/texto1"
                                android:layout_marginLeft="50dp"
                                android:textColor="@color/black"
                                android:textStyle=""
                                >

                            </EditText>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="NOMBRE DEL PRODUCTO"
                            android:textColor="@color/green"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp">

                        </TextView>


                        <EditText
                            android:id="@+id/NomProduc"
                            android:layout_width="200dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="50dp"
                            android:fontFamily="@font/texto1"

                            android:textAlignment="center"
                            android:textColor="@color/black"

                            >

                        </EditText>














                    </LinearLayout>


                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnCancelarProduc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="470dp"
                android:background="@drawable/shape_btn_guardar_eliminar"
                android:src="@drawable/cancelar">

            </ImageButton>

        </LinearLayout>


        <ImageButton
            android:id="@+id/btnGuardarProduc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/comprobado"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="470dp"
            android:background="@drawable/shape_btn_guardar_eliminar">

        </ImageButton>
    </FrameLayout>

</FrameLayout>